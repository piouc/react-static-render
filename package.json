{
  "name": "react-static-render",
  "version": "3.0.0",
  "description": "A CLI tool for rendering React components to static HTML files",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "react-static-render": "./bin/react-static-render.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./components/liquid": {
      "import": "./dist/components/liquid-template-parts.js",
      "require": "./dist/components/liquid-template-parts.js",
      "types": "./dist/components/liquid-template-parts.d.ts"
    },
    "./components/php": {
      "import": "./dist/components/php-template-parts.js",
      "require": "./dist/components/php-template-parts.js",
      "types": "./dist/components/php-template-parts.d.ts"
    },
    "./components/script": {
      "import": "./dist/components/script.js",
      "require": "./dist/components/script.js",
      "types": "./dist/components/script.d.ts"
    }
  },
  "files": [
    "dist/",
    "bin/",
    "tsconfig.json",
    "babel.config.json",
    "README.md"
  ],
  "scripts": {
    "build": "tsgo",
    "dev": "tsgo --watch",
    "prepublishOnly": "npm run build"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@babel/core": "^7.28.5",
    "@babel/plugin-transform-modules-commonjs": "^7.27.1",
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@babel/register": "^7.28.3",
    "@types/inquirer": "^9.0.9",
    "babel-plugin-styled-components": "^2.1.4",
    "chokidar": "^4.0.3",
    "commander": "^14.0.2",
    "dependency-tree": "^11.2.0",
    "execa": "^9.6.0",
    "glob": "^12.0.0",
    "html-entities": "^2.6.0",
    "inquirer": "^13.0.1",
    "p-limit": "^7.2.0",
    "package-directory": "^8.1.0",
    "prettier": "^3.6.2",
    "ws": "^8.18.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/babel__core": "^7.20.5",
    "@types/babel__register": "^7.17.3",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "@types/ws": "^8.18.1",
    "@typescript/native-preview": "^7.0.0-dev.20251118.1",
    "react": ">=19.2.0",
    "react-dom": ">=19.2.0"
  },
  "peerDependencies": {
    "react": ">=19.0.0",
    "react-dom": ">=19.0.0"
  }
}
